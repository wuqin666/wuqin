<view class="nrwrap">
  <view class="nav">
    <view class="swiper-tab-item {{currentTab == 0 ? 'active':''}}" data-current='0' bindtap="clickTab">推荐</view>
    <view class="swiper-tab-item {{currentTab == 1 ? 'active':''}}" data-current='1'  bindtap="clickTab">连载动画</view>
    <view class="swiper-tab-item {{currentTab == 2 ? 'active':''}}" data-current='2'  bindtap="clickTab">完结动画</view>
    <view class="swiper-tab-item {{currentTab == 3 ? 'active':''}}" data-current='3' bindtap="clickTab">资讯</view>
    <view class="swiper-tab-item {{currentTab == 4 ? 'active':''}}" data-current='4'  bindtap="clickTab">官方延伸</view>
  </view>
</view>

<swiper class="lunbo-swiper" autoplay="true" indicator-dots="false">
  <swiper-item>
    <image src="../images/swiper-item1.png"></image>
  </swiper-item>
  <swiper-item>
    <image src="../images/swiper-item2.jpg"></image>
  </swiper-item>
  <swiper-item>
    <image src="../images/swiper-item3.jpeg"></image>
  </swiper-item>
  <swiper-item>
    <image src="../images/swiper-item4.jpg"></image>
  </swiper-item>
</swiper>

<swiper duration="300" current="{{currentTab}}" bindchange="swiperTab">
  <swiper-item >
    <view class="swiper-item-nr" wx:for="{{resp}}" bindtap="bofang" data-id='{{item.videoid}}' data-url = '{{item.videourl}}' data-author = '{{item.videoauthor}}' 
			   data-date = '{{item.videodate}}' data-fans = '{{item.videofans}}' data-goodnum = '{{item.videogoodnum}}' data-img = '{{item.videoimg}}'
				  data-title = '{{item.videotitle}}' data-time = '{{item.videotime}}' data-playnum = '{{item.videoplaynum}}'>
      <view class="img">
        <image src="{{item.videocoverimg}}"></image>
        <text>{{item.videotime}}</text>
      </view>
      <view class="text">
        <text class="tittle">
