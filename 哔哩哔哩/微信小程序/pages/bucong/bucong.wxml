<!-- 左侧栏 -容器 -->
<view class="page">
  <swiper duration="300" current="{{currentTab}}" bindchange="swiperTab" class="page1">
    <swiper-item>
      <view class="page-bottom">
        <view class="page-content">

          <view class="wc">
            <text>第一个item</text>
          </view>

          <view class="wc">
            <text>第二个item</text>
          </view>

          <view class="wc">
            <text>第三个item</text>
          </view>

          <view class="wc">
            <text>第四个item</text>
          </view>

        </view>
      </view>
    </swiper-item>

    <!-- 右侧栏 -->
    <swiper-item>
      <view class="page-top {{open ? 'c-state1': ''}}">
        <image src="../images/btn.png" bindtap="tap_ch"></image>
        <view class="page-center {oprn ? 'c-state2':''}}"></view>
      </view>
    </swiper-item>

  </swiper>
</view>